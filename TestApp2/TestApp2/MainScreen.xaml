<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestApp2.MainScreen">
    <ContentPage.Content>
        <StackLayout>
            <Label  Text="ENCRYPTER"
                    VerticalOptions="Start" 
                    HorizontalOptions="CenterAndExpand"
                    Margin="0,75,0,125"
                    FontSize="25"   />

            <Entry  x:Name="textEntry"
                    Placeholder="Insert Text to Encrypt"
                   VerticalOptions="Start"
                   HorizontalOptions="CenterAndExpand"
                   Margin="25,10,25,40"
                   MinimumWidthRequest="250"
                   WidthRequest="250"   />

            <Button x:Name="encryptButton"
                    Text="Encrypt"
                    VerticalOptions="Start"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="encryptButton_Clicked" />
            
            <Label  x:Name="displayLabel"
                    Text="Encrypted Text"
                   VerticalOptions="Start"
                   HorizontalOptions="CenterAndExpand"
                   Margin="10,40,10,15" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>